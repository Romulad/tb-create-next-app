{
  "compilerOptions": {
    "target": "es2019",        
    "strict": true,
    "moduleResolution": "bundler",        
    "esModuleInterop": true,
    "skipLibCheck": false,   
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node"],
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist", "./src/templates"]
}
