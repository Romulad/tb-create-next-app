{
  "compilerOptions": {
    "target": "es2019",        
    "strict": true,
    "moduleResolution": "bundler",        
    "esModuleInterop": true,
    "skipLibCheck": true,   
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "vitest/globals"],
    "resolveJsonModule": true,
    "outDir": "dist",
  },
  "include": ["src/"],
  "exclude": ["node_modules", "dist", "src/templates"]
}
